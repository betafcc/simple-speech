{
  "version": "0.3.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "playground": "concurrently --kill-others \"tsc-bundle ./playground/tsconfig.json --watch\" \"live-server . --watch=playground/dist --open=./playground\"",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "release:patch": "bash ./scripts/release.bash patch",
    "release:minor": "bash ./scripts/release.bash minor",
    "release:major": "bash ./scripts/release.bash major"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "es5",
    "endOfLine": "auto"
  },
  "name": "simple-speech",
  "author": "betafcc",
  "homepage": "https://github.com/betafcc/simple-speech",
  "repository": {
    "type": "git",
    "url": "https://github.com/betafcc/simple-speech.git"
  },
  "module": "dist/simple-speech.esm.js",
  "size-limit": [
    {
      "path": "dist/simple-speech.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/simple-speech.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/dom-speech-recognition": "^0.0.1",
    "concurrently": "^7.6.0",
    "husky": "^8.0.2",
    "live-server": "^1.2.2",
    "prettier-plugin-jsdoc": "^0.4.2",
    "rx": "^4.1.0",
    "size-limit": "^8.1.0",
    "systemjs": "^6.13.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "typescript-bundle": "^1.0.18"
  },
  "volta": {
    "node": "16.19.0"
  }
}
